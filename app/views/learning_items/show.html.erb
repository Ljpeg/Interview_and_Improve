<h1>
  Learning item #<%= @the_learning_item.id %> details
</h1>

<article>
  <div>
    <a href="/learning_items">
      Go back
    </a>
  </div>

  <div>
    <a href="/delete_learning_item/<%= @the_learning_item.id %>">
      Delete learning item
    </a>
  </div>
  <dl>
    <dt>
      Reflection
    </dt>
    <dd>
      <%= @the_learning_item.reflection_id %>
    </dd>

    <dt>
      Category
    </dt>
    <dd>
      <%= @the_learning_item.category %>
    </dd>

    <dt>
      Description
    </dt>
    <dd>
      <%= @the_learning_item.description %>
    </dd>

    <dt>
      Status
    </dt>
    <dd>
      <%= @the_learning_item.status %>
    </dd>

    <dt>
      Created at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_learning_item.created_at) %> ago
    </dd>

    <dt>
      Updated at
    </dt>
    <dd>
      <%= time_ago_in_words(@the_learning_item.updated_at) %> ago
    </dd>
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit learning item
    </h2>
  </header>

  <form action="/modify_learning_item/<%= @the_learning_item.id %>"  method="post" >
    <div>
      <label for="reflection_id_box">
        Reflection
      </label>

      <input type="text" id="reflection_id_box" name="query_reflection_id" value="<%= @the_learning_item.reflection_id %>">
    </div>

    <div>
      <label for="category_box">
        Category
      </label>

      <input type="text" id="category_box" name="query_category" value="<%= @the_learning_item.category %>">
    </div>

    <div>
      <label for="description_box">
        Description
      </label>

      <input type="text" id="description_box" name="query_description" value="<%= @the_learning_item.description %>">
    </div>

    <div>
      <label for="status_box">
        Status
      </label>

      <input type="text" id="status_box" name="query_status" value="<%= @the_learning_item.status %>">
    </div>

    <button type="submit">
      Update learning item
    </button>
  </form>
</article>

<hr>
