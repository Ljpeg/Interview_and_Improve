<h1>
  Learning item #<%= @learning_item.id %> details
</h1>

<article>
  <div>
    <%= link_to 'Go back', interview_reflection_learning_items_path(@interview.id) %>
  </div>
  <div>
    <%= link_to 'Edit', edit_learning_item_path(@learning_item.id) %>
  </div>

  <div>
    <%= link_to 'Delete this item', @learning_item, data: { method: :delete } %>
  </div>
  <dl>
    <dt>
      Reflection
    </dt>
    <dd>
      <%= @learning_item.reflection_id %>
    </dd>

    <dt>
      Category
    </dt>
    <dd>
      <%= @learning_item.category %>
    </dd>

    <dt>
      Description
    </dt>
    <dd>
      <%= @learning_item.description %>
    </dd>

    <dt>
      Status
    </dt>
    <dd>
      <%= @learning_item.status %>
    </dd>

</article>

<hr>
