<h1>
  List of all reflections
</h1>

<hr>

<article>
  <header>
    <h2>
      Add a new reflection
    </h2>
  </header>

  <form action="/insert_reflection" method="post">
    <div>
      <label for="interview_id_box">
        Interview
      </label>

      <input type="text" id="interview_id_box" name="query_interview_id">
    </div>

    <div>
      <label for="positive_notes_box">
        Positive notes
      </label>

      <input type="text" id="positive_notes_box" name="query_positive_notes">
    </div>

    <div>
      <label for="negative_notes_box">
        Negative notes
      </label>

      <input type="text" id="negative_notes_box" name="query_negative_notes">
    </div>

    <div>
      <label for="primary_gap_box">
        Primary gap
      </label>

      <input type="text" id="primary_gap_box" name="query_primary_gap">
    </div>

    <button type="submit">
      Create reflection
    </button>
  </form>
</article>

<hr>

<article>
  <ul>
    <% @list_of_reflections.each do |a_reflection| %>
      <li>
        <a href="/reflections/<%= a_reflection.id %>">
          Reflection #<%= a_reflection.id %>
        </a>
      </li>
    <% end %>
  </ul>
</article>

<hr>
