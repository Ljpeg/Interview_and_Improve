<h1>
  Reflection #<%= @reflection.id %> details
</h1>

<article>
  <div>
    <%= link_to "Go back", interview_path(@interview.id)%>
  </div>
  <div>
    <%= link_to "Edit", edit_interview_reflection_path %>
  </div>
  <div>
    <%= link_to "Delete this reflection", interview_reflection_path(@interview.id), data: { method: :delete }%>
  </div>
  <dl>
    <dt>
      Interview
    </dt>
    <dd>
      <%= @reflection.interview_id %>
    </dd>

    <dt>
      Positive notes
    </dt>
    <dd>
      <%= @reflection.positive_notes %>
    </dd>

    <dt>
      Negative notes
    </dt>
    <dd>
      <%= @reflection.negative_notes %>
    </dd>

    <dt>
      Primary gap
    </dt>
    <dd>
      <%= @reflection.primary_gap %>
    </dd>

    
  </dl>
</article>

<hr>


<article>
  <header>
    <h2>
      Edit reflection
    </h2>
  </header>

  <form action="/modify_reflection/<%= @reflection.id %>"  method="post" >
    <div>
      <label for="interview_id_box">
        Interview
      </label>

      <input type="text" id="interview_id_box" name="query_interview_id" value="<%= @reflection.interview_id %>">
    </div>

    <div>
      <label for="positive_notes_box">
        Positive notes
      </label>

      <input type="text" id="positive_notes_box" name="query_positive_notes" value="<%= @reflection.positive_notes %>">
    </div>

    <div>
      <label for="negative_notes_box">
        Negative notes
      </label>

      <input type="text" id="negative_notes_box" name="query_negative_notes" value="<%= @reflection.negative_notes %>">
    </div>

    <div>
      <label for="primary_gap_box">
        Primary gap
      </label>

      <input type="text" id="primary_gap_box" name="query_primary_gap" value="<%= @reflection.primary_gap %>">
    </div>

    <button type="submit">
      Update reflection
    </button>
  </form>
</article>

<hr>
